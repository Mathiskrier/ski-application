<div class="main-container white-text">
  <!---%= render "reports/new" %-->
  <div class="centered-div-home">
    <h1><%= @ski_spot.location_name %></h1>
    <%= link_to "Back", request.referrer, class: "btn btn-primary" %>
    <!---%= link_to "back", ski_spots_path, class: "btn btn-primary" %--->
    <%= link_to "add report", new_ski_spot_report_path, class: "btn btn-primary" %>
    <div class="comment-box">
      <% @reports.each do |report| %>
        <div class="comment">
          <div class="comment-details">
            <div class="comment-avatar">
              <% if report.user.avatar.attached? %>
                <%= image_tag(report.user.avatar, alt: "avatar", class: "avatar", id: "avatar") %>
              <% else %>
                <%= image_tag "avatar-grey.jpeg", alt: "avatar", class: "avatar" %>
              <% end %>
            </div>
            <div class="comment-username">
              <p><%= report.user.username %></p>
            </div>
            <div class="comment-time">
              <p><%= time_ago_in_words(report.created_at) %></p>
            </div>
          </div>
          <div class="comment-text">
            <p><%= report.comment %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
